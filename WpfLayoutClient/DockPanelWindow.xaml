<Window x:Class="WpfLayoutClient.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DockPanel" Height="300" Width="300">
    <DockPanel>
        <Button
            DockPanel.Dock="Top"
            Content="Button 1"
            Margin="4" />
        <Button
            DockPanel.Dock="Right"
            Content="Button 2"
            Margin="4" />
        <Button
            DockPanel.Dock="Bottom"
            Content="Button 3"
            Margin="4" />
        <Button
            DockPanel.Dock="Left"
            Content="Button 4"
            Margin="4" />
        <Button
            DockPanel.Dock="Top"
            Content="Button 5"
            Margin="4" />
        <Button
            DockPanel.Dock="Bottom"
            Content="Button 6"
            Margin="4" />
    </DockPanel>
</Window>
